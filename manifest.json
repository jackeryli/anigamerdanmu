{
  "name": "AnigamerDanmu",
  "description": "Read danmu from Anigamer video and display on chrome.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://ani.gamer.com.tw/*"]
    }
  ]
}
